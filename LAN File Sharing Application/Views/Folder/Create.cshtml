@model LAN_File_Sharing_Application.Models.FolderCreationForm

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>FolderCreationForm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FolderID" class="control-label"></label>
                <input asp-for="FolderID" class="form-control" type="hidden"value="@ViewBag.FolderId"/>
                <span asp-validation-for="FolderID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FolderName" class="control-label"></label>
                <input asp-for="FolderName" class="form-control" />
                <span asp-validation-for="FolderName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FolderDescription" class="control-label"></label>
                <input asp-for="FolderDescription" class="form-control" />
                <span asp-validation-for="FolderDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BucketID" class="control-label"></label>
                <input asp-for="BucketID" class="form-control" disabled/>
                <span asp-validation-for="BucketID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Folder">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
