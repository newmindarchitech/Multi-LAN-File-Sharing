@model IEnumerable<LAN_File_Sharing_Application.Models.Images>
@{
    var file = ViewBag.FileItem as LAN_File_Sharing_Application.Models.FileItem;
    ViewData["Title"] = "Ảnh trong tệp";
}
<div class="container mt-4">
    <h2>🖼️ Ảnh trong tệp: <strong>@file.FileName</strong></h2>
    <a asp-action="Index" class="btn btn-secondary mb-3">← Quay lại danh sách</a>

    <div class="row">
        @foreach (var img in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card shadow-sm">
                    <img src="~/@img.FilePath" class="card-img-top" style="object-fit:cover;height:200px" />
                    <div class="card-body">
                        <p class="card-text text-truncate">@img.FileName</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>