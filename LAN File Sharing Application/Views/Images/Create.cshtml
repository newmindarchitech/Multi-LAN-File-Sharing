@model LAN_File_Sharing_Application.Models.ImageSubmitForm

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ImageSubmitForm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ImageId" class="control-label"></label>
                <input asp-for="ImageId" class="form-control" disabled/>
                <span asp-validation-for="ImageId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="File" class="control-label" class="col-sm-4 col-form-label">Image</label>
                <div class=" col-sm-8">
                    <input class="form-control" asp-for="File"/>
                    <span asp-validation-for="File" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="FolderID" class="control-label"></label>
                <input asp-for="FolderID" class="form-control" disabled/>
                <span asp-validation-for="FolderID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
